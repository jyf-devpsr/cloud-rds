[mysql]
prompt=\\u@\\d \\r:\\m:\\s>

[mysqld]
character-set-client-handshake   = FALSE
character-set-server             = utf8mb4
init_connect                     = 'SET NAMES utf8mb4'
skip-name-resolve
max_prepared_stmt_count         = 16382
max_connections                 = 4000
max_connect_errors              = 1024
basedir                         = /usr/local/mysql
port                            = 3306
datadir                         = /data/mysql/data
socket                          = /tmp/mysql.sock
mysqlx_socket                   = /tmp/mysqlx-33060.sock
interactive_timeout             = 1800
wait_timeout                    = 1800
max_heap_table_size             = 64M
tmp_table_size                  = 64M
user                            = mysql
explicit_defaults_for_timestamp = true
log_timestamps                  = system
read_buffer_size                = 2M
sort_buffer_size                = 2M
join_buffer_size                = 64M
log-error                       = mysql_run.err
pid-file                        = mysql-pid.pid
thread_stack                    = 512k
bind_address                    = @bind_address,127.0.0.1

#replication,binlog
server-id                       = @server_id
binlog_format                   = row
sync_binlog                     = 1
log-bin                         = mysql-bin
relay_log_recovery              = 1
relay-log                       = relay-bin
binlog_expire_logs_seconds      = 604800
max_allowed_packet              = 1024M
gtid_mode                       = on
enforce-gtid-consistency        = on
log_replica_updates


#### for gtid
gtid_mode                       = ON
binlog_gtid_simple_recovery     = ON
enforce_gtid_consistency        = ON
gtid_executed_compression_period = 1000

#### for engines
default_storage_engine          = innodb
default_tmp_storage_engine      = innodb
internal_tmp_mem_storage_engine = TempTable

#innodb
innodb_data_file_path           = ibdata1:2G:autoextend
innodb_read_io_threads          = @cpu_num
innodb_write_io_threads         = @cpu_num
innodb_buffer_pool_size         = @memory
innodb-file-per-table           = 1
innodb_flush_log_at_trx_commit  = 1
innodb_redo_log_capacity        = 2G
innodb_buffer_pool_instances    = 8
innodb_purge_threads            = 8
innodb_io_capacity              = 2000
innodb_io_capacity_max          = 4000
innodb_flush_method             = O_DIRECT

#slowlog
slow-query-log                  = 1
slow-query-log-file             = /data/mysql/data/mysql-slow.log
long_query_time                 = 1


#mysql_native_password
authentication_policy           = *
lower_case_table_names          = 1