[mysql]
prompt=\\u@\\d \\r:\\m:\\s>
no-auto-rehash

[mysqldump]
quick
max_allowed_packet = 1024M

[mysqld]
character-set-client-handshake   = FALSE
character-set-server             = utf8mb4
init_connect                     = 'SET NAMES utf8mb4'
skip-name-resolve
max_prepared_stmt_count         = 16382
max_connections                 = 4000
max_connect_errors              = 1024
basedir                         = /usr/local/mysql
port                            = 3306
datadir                         = /data/mysql/data
socket                          = /tmp/mysql.sock
interactive_timeout             = 1800
wait_timeout                    = 1800
max_heap_table_size             = 64M
tmp_table_size                  = 64M
user                            = mysql
explicit_defaults_for_timestamp = true
log_timestamps                  = system
read_buffer_size                = 2M
sort_buffer_size                = 2M
join_buffer_size                = 64M
log-error                       = mysql_run.err
pid-file                        = mysql-pid.pid
thread_stack                    = 512k
bind_address                    = @bind_address

#replication,binlog
server-id                       = @server_id
binlog_format                   = row
innodb_support_xa               = 1
sync_binlog                     = 1
log-bin                         = mysql-bin
relay-log-info-repository       = table
relay_log_recovery              = 1
relay-log                       = relay-bin
master-info-repository          = table
expire-logs-days                = 7
max_allowed_packet              = 1024M
slave_parallel_type             = LOGICAL_CLOCK
slave_parallel_workers          = 8
log-slave-updates




#### for gtid
gtid_mode                       = ON
binlog_gtid_simple_recovery     = ON
enforce_gtid_consistency        = ON
gtid_executed_compression_period = 1000


#innodb
innodb_data_file_path           = ibdata1:2G:autoextend
innodb_read_io_threads          = @cpu_num
innodb_write_io_threads         = @cpu_num
innodb_buffer_pool_size         = @memory
innodb-file-per-table           = 1
innodb_flush_log_at_trx_commit  = 1
innodb_buffer_pool_instances    = 8
innodb_purge_threads            = 8
innodb_io_capacity              = 2000
innodb_io_capacity_max          = 4000
innodb_flush_method             = O_DIRECT

#thread pool
thread_handling                 = pool-of-threads
thread_pool_max_threads         = 100000
thread_pool_oversubscribe       = 10


#slowlog
slow-query-log                  = 1
slow-query-log-file             = /data/mysql/data/mysql-slow.log
long_query_time                 = 1

#undo log
innodb_max_undo_log_size        = 5G
innodb_undo_log_truncate        = ON
innodb_undo_logs                = 128
innodb_undo_tablespaces         = 4
innodb_purge_rseg_truncate_frequency = 128
innodb_undo_directory           = /data/mysql/data

[mysqld_safe]
basedir                         = /usr/local/mysql
datadir                         = /data/mysql/data
port                            = 3306
